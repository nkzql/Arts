<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/learn_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="异俗"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/learn_smart"/>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/learn_smart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/learn_title">
        <com.scwang.smart.refresh.header.MaterialHeader
            android:id="@+id/learn_smart_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/learn_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.scwang.smart.refresh.footer.BallPulseFooter
            android:id="@+id/learn_smart_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>